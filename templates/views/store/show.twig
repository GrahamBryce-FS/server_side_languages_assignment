{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>This Product!</h2>
        <ul>
            <li class="list-unstyled bg-danger card w-50">
                <div class=" fs-4 text-decoration-underline">{{ product.title }} - ${{ product.price }} </div>
                <ul>

				{% set defaultImage = variant.Images[0] %}
				<div class="">
					<img src="/public/images/{{ defaultImage.id }}{{ defaultImage.extension }}" class="col-3"/>
				</div>
				<div class="">
					{% for image in variant.Images %}
						<img src="/public/images/{{ image.id }}{{ image.extension }}" role="button" class="col-1 ">
					{% endfor %}
				</div>
                
                {% if variant.inventory > 10 %}
                    <li>In stock!</li>
                {% else %}
                    <li>Out of stock</li>
                {% endif %}

                <li>Description: {{ variant.description }}</li>
                {% for option in product.Variants %}
				{% if option.id == variant.id %}
					{{ option.title }}
				{% else %}
					<a href="/store/products/{{ product.slug }}?v={{ option.slug }}">{{ option.title }}</a>
				{% endif %}
			{% endfor %}
            </ul>
        </li>
        </ul>

{% endblock %}