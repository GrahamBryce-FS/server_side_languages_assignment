{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>About {{ product.title }} </h2>
    <ul>
        <li>
            <label>ID: </label> {{ product.id }}
        </li>
        <li>
            <label>Name: </label> {{ product.title }}
        </li>
        <li>
            <label>Price: $</label>{{ product.price }}
        </li>
        <li>
            <label>Is Published: </label>{{ product.is_published }}
        </li>
        <li>
            <label>Description: </label>{{ product.description }}
        </li>
    </ul>
    <p>
        <a href="/products/{{ product.id }}/edit">Edit</a> | 
        <a href="/products/{{ product.id }}/delete">Delete</a>
    </p>
{% endblock %}