{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>About {{ variant.title }} </h2>
    <ul>
        <li>
            <label>ID: </label> {{ variant.id }}
        </li>
        <li>
            <label>Title: </label> {{ variant.title }}
        </li>
        <li>
            <label>Product: </label> {{ product.title }}
        </li>
        <li>
            <label>Price: $</label>{{ product.price }}
        </li>
        <li>
            <label>Description: </label>{{ variant.description }}
        </li>
        <br>
        <li>
            <label>Inventory: </label>{{ variant.inventory}}
        </li>
        <li>
            <label>Slug: </label>{{ variant.slug }}
        </li>
    </ul>
    <p>
        <a href="/variants/{{ variant.id }}/edit">Edit</a> | 
        <a href="/variants/{{ variant.id }}/delete">Delete</a>
    </p>
{% endblock %}